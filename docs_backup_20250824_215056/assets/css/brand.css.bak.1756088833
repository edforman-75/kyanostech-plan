:root{
  --ky-primary:#1f2937;
  --ky-blue:#3b82f6;
  --ky-accent:#1d4ed8;
  --ky-agon:#2563eb;
  --ky-polis:#059669;
  --ky-scope:#dc2626;
  --ky-gold:#f59e0b;
  --ky-silver:#6b7280;
  --ky-bg:#f8fafc;
  --ky-cream:#fefce8;
}
.md-typeset a{color:var(--ky-blue)}
.md-typeset h1,.md-typeset h2{color:var(--ky-primary)}
.callout-critical{
  --pad: 20px;
  margin: 24px 0;
  padding: var(--pad);
  border-radius: 16px;
  background: linear-gradient(135deg,#3b82f6 0%,#1d4ed8 50%,#1f2937 100%);
  color: #fefce8;
  box-shadow: 0 6px 18px rgba(0,0,0,.15);
}
.callout-critical h2{
  margin-top: 0;
  font-size: 1.3rem;
  letter-spacing: .3px;
}
.callout-critical p{ margin:.2em 0 }
.md-source-file__fact{ display:none } /* hide floating date chip */
/* --- critical callout (brand) --- */
.callout-critical{
  margin: 32px 0;
  padding: 24px 28px;
  border-radius: 18px;
  background: linear-gradient(135deg,#3b82f6 0%,#1d4ed8 50%,#1f2937 100%);
  color: #fff;
  box-shadow: 0 10px 24px rgba(0,0,0,.18);
}
.callout-critical h2{
  margin: 0 0 10px 0;
  font-size: 1.5rem;
  line-height: 1.2;
  color: #fff;
}
.callout-critical p{
  margin: .45rem 0;
  font-size: 1.05rem; /* larger than body */
}
.callout-critical strong{ color:#fff; }
@media (min-width: 800px){
  /* visually wider inside content */
  .md-content .callout-critical{ margin-left: -24px; margin-right: -24px; }
}
