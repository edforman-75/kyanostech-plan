site_name: KyanosTech — Impact Business Plan

theme:
  name: material
  features:
    - navigation.top
    - navigation.sections
    - toc.integrate
    - content.code.copy
  palette:
    scheme: default

plugins:
  - search
  - git-revision-date-localized:
      enable_creation_date: false
      type: date
      fallback_to_build_date: true
      locale: en

markdown_extensions:
  - footnotes
  - admonition
  - toc:
      permalink: true
  - attr_list
  - pymdownx.details
  - pymdownx.superfences

extra:
  meta:
    - name: robots
      content: noindex,nofollow,noarchive
    - name: build-date
      content: "{{ git_revision_date_localized }}"

extra_css:
  - assets/css/tooltips.css
  - assets/css/print.css
  - assets/css/footer.css

extra_javascript:
  - assets/js/footnote-tooltips.js
  - assets/js/build-date.js

nav:
  - Welcome: index.md
  - Executive Summary: ky-executive-summary.md
  - Problem & Urgency: ky-problem-urgency.md
  - Product Strategy & Technology: ky-products-tech.md
  - Market & Financial Opportunity: ky-market-opportunity.md
  - Business Model: ky-business-model.md
  - Go-To-Market Strategy: ky-go-to-market.md
  - Impact Measurement & Reporting: ky-impact-measurement.md
  - Risk & Mitigation: ky-risk-mitigation.md
  - Exit & Legacy: ky-exit-pathways.md
  - Team & Governance: ky-team-governance.md
  - Appendix:
      - Appendix C — Strategic Branding: ky-appendix-c-branding.md
      - Appendix D — Evidence & Methods: ky-appendix-d-evidence.md
